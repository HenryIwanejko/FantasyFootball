
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainLayout_ScrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Player:"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/addOrEditPlayerTitleTxtView"
            android:textColor="#ff000000"
            android:textStyle="bold"
            android:textSize="75px" />
        <TextView
            android:text="Firstname:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/addOrEditPlayerFirstnameLabelTxtView"
            android:textColor="#ff000000"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff000000"
            android:id="@+id/addOrEditPlayerFirstnameEditView"
            android:layout_marginBottom="20px"/>
        <TextView
            android:text="Surname:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/addOrEditPlayerSurnameLabelTxtView"
            android:textColor="#ff000000"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff000000"
            android:id="@+id/addOrEditPlayerSurnameEditView"
            android:layout_marginBottom="20px"/>
        <TextView
            android:text="Position:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/addOrEditPlayerPositionLabelSpinner"
            android:textColor="#ff000000"
            android:layout_marginTop="20px"/>
        <Spinner
            android:id="@+id/addOrEditPlayerPositionSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff000000"
            android:layout_marginBottom="20px"/>
        <TextView
            android:text="Premier Team:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/addOrEditPlayerPremierTeamLabelSpinner"
            android:textColor="#ff000000"
            android:layout_marginTop="20px"/>
        <Spinner
            android:id="@+id/addOrEditPlayerPremierTeamSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff000000"
            android:layout_marginBottom="20px"/>
        <TextView
            android:text="Price:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/addOrEditPlayerPriceLabelTxtView"
            android:textColor="#ff000000"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff000000"
            android:id="@+id/addOrEditPlayerPriceEditView"
            android:layout_marginBottom="20px"/>
        <Button
            android:text="Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/addOrEditPlayerSubmitBtn"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"/>
        <Button
            android:text="Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/addOrEditPlayerBackBtn"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"/>
    </LinearLayout>
</ScrollView>