
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainLayout_ScrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="PremierTeam:"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/addOrEditPremierTeamTitleTxtView"
            android:textColor="#ff000000"
            android:textStyle="bold"
            android:textSize="75px" />
        <TextView
            android:text="Premier Team Name:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/addOrEditPremierTeamNameLabelTxtView"
            android:textColor="#ff000000"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff000000"
            android:id="@+id/addOrEditPremierTeamNameEditView"
            android:layout_marginBottom="20px"/>
        <Button
            android:text="Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/addOrEditPremierTeamSubmitBtn"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"/>
        <Button
            android:text="Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/addOrEditPremierTeamBackBtn"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"/>
    </LinearLayout>
</ScrollView>